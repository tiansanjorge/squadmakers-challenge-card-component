{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vite.config.ts",
    "src/setupTests.ts"
  ]
}
